@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ECI_05_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');
</script>
@section scripts{
    <script src="~/js/jsTree.js"></script>
    <link href="~/css/jsTree.css" rel="stylesheet" />
    <script src="~/js/Inventory/ItemGroup.js"></script>
}


<style>


    .w-120 {
        width: 120px !important
    }

    .mdl-card__title {
        max-height: 45px !important;
        display: block !important;
        padding-left: 0px !important;
        padding-top: 0px !important;
    }

    .mdl-card {
        min-height: auto !important
    }

    hr {
        border-color: #f1f1f1 !important;
    }

    #pnlAddMainMenu, #pnlAddSubMenu {
        width: 100%;
    }

    #lblItemGroup {
        cursor: pointer;
        padding: 2px 4px;
    }

        #lblItemGroup:hover {
            background: #e7f4f9;
            box-shadow: inset 0 0 1px #cccccc;
        }

    .bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
        width: 100% !important
    }

    hr {
        margin-bottom: 8px;
        margin-top: 8px;
    }
</style>

<div class="row row-bottom-pad">
    <div class="col-sm-4 col-md-4 col-lg-4">

        <div id="ItemGroupTree">
        </div>
    </div>
    <div class="col-sm-1 col-md-1 col-lg-1"></div>
    <div id="dvItemGroup" class="col-lg-7 col-md-7 col-sm-7 f-right" style="display:none;">

        <div class="demo-card-square mdl-card mdl-shadow--2dp marbot15 fullwidth" id="pnlAddItemGroup">
            <div class="mdl-card__title mdl-card--expand padleft0 padtop0 h-60 d-block">
                <h5 class="mdl-card__title-text">@Localizer["AddItemGroup"] </h5>
            </div>
            <div class="mdl-card__supporting-text fullwidth">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            <label>@Localizer["ItemGroupDescription"]</label>
                            <input type="text" maxlength="50" class="form-control" id="txtItemGroupDesc" />
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-12" style="margin-bottom: 15px;">
                        <label class="mdl-checkbox mdl-js-checkbox" for="chkActiveStatus">
                            <input type="checkbox" id="chkActiveStatus"
                                   class="mdl-checkbox__input">
                            <span class="mdl-checkbox__label">@Localizer["Active"]</span>
                        </label>
                    </div>

                </div>
                <hr />
                <div class="mdl-card__actions text-center pad0">
                    <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btnIGAdd" onclick="fnAddOrUpdateItemGroup()"><i class="fa fa-save"></i> @Localizer["Save"]</button>
                </div>
            </div>
        </div>
    </div>


</div>
<script>
    var localization = {
        AddItemGroup: '@Localizer["AddItemGroup"]',
        Save: '@Localizer["Save"]',
        ViewItemGroup: '@Localizer["ViewItemGroup"]',
        EditItemGroup: '@Localizer["EditItemGroup"]',
        Update: '@Localizer["Update"]',
    }
</script>





