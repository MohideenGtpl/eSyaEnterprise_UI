@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ECA_12_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/js/Config/Voucher.js"></script>
}

@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');

     var localization = {
         VoucherId: '@Localizer["VoucherId"]',
         TransactionType: '@Localizer["TransactionType"]',
         VoucherDescription: '@Localizer["VoucherDescription"]',
         Edit: '@Localizer["Edit"]',
         Active: '@Localizer["Active"]',
         Actions: '@Localizer["Actions"]',
         View: '@Localizer["View"]',
         Save: '@Localizer["Save"]',
         Update: '@Localizer["Update"]',
         Delete: '@Localizer["Delete"]',
         Activate: '@Localizer["Activate"]',
         Deactivate: '@Localizer["Deactivate"]',
         AddVoucher: '@Localizer["AddVoucher"]',
         UpdateVoucher: '@Localizer["UpdateVoucher"]',
         ViewVoucher: '@Localizer["ViewVoucher"]',
         DeleteVoucher:'@Localizer["DeleteVoucher"]',
    };
</script>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table id="jqgVoucher"></table>
        <div id="jqpVoucher"></div>
    </div>
</div>

<div class="modal fade in" id="PopupVoucher" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-md  " role="document" style="box-shadow:none;">
        <div class="modal-content ">
            <div class="modal-header popupHeader">
                <button type="button" class="close ml-auto" data-dismiss="modal"> <i class="fa fa-times"></i></button>
                <h4 class="modal-title">@Localizer["AddVoucher"]</h4>
            </div>

            <div class="modal-body">

                <div class="row padbot4">

                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="txtVoucherId">@Localizer["VoucherId"]</label>
                            <input class="form-control" type="text" maxlength="15" id="txtVoucherId" data-inputmask="'mask': '9', 'repeat': 10, 'greedy' : false" />

                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="txtTransactionType">@Localizer["TransactionType"]</label>
                            <input class="form-control" type="text" maxlength="3" id="txtTransactionType" />

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="txtVoucherDes">@Localizer["VoucherDescription"]</label>
                            <input class="form-control" type="text" maxlength="150" id="txtVoucherDes" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="default-checkbox">
                            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkActiveStatus">
                                <input type="checkbox" id="chkActiveStatus" class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["Active"]</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button" id="btnSaveVoucher" onclick="fnSaveVoucher()"><i class="fa fa-save"></i> @Localizer["Save"]   </button>
                        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btnDeactivateVoucher" onclick="fnDeleteVoucher()"><i class="fas fa-ban"></i>  @Localizer["DeActivate"] </button>
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" id="btnCancelVoucher"> <i class="fa fa-times"></i> @Localizer["Cancel"] </button>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>







