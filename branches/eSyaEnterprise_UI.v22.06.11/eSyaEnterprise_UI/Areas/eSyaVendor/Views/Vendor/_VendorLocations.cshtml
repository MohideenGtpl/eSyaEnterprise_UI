<div class="row" style="margin-bottom:10px;">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table id="jqgVendorLocation"></table>
        <div id="jqpVendorLocation"></div>
    </div>
</div>
