
@{
    ViewData["Title"] = "V_3001_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row padbot4">
    <div class="col-lg-2 col-md-3 col-sm-6">
        <div class="form-group">
            <label for="txtERNumber">ER Number</label>
            <input id="txtERNumber" type="text" class="form-control" maxlength="75" />
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <div class="form-group">
            <label>Date</label>
            <input id="txtDate" class="form-control datepicker" type="text" autocomplete="off" />
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <div class="form-group">
            <label>Time</label>
            <input id="txtTime" class="form-control" type="time" autocomplete="off" />
        </div>
    </div>
            
    <div class="col-lg-12 col-md-12 col-sm-12">
        <p class="subheading bg-lightgrey pad5">Emergency Details</p>
        <hr />
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6 form-group">
        <div class="default-checkbox">
            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkIsMLC">
                <input type="checkbox" id="chkIsMLC" class="mdl-checkbox__input">
                <span class="mdl-checkbox__label">Is MLC ?</span>
            </label>
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6">
        <div class="form-group">
            <label class="lable-color"> Mode of Arrival</label>
            <select class="selectpicker" data-live-search="false" title="Select" id="cboModeOfArrival"></select>
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6">
        <div class="form-group">
            <label class="lable-color"> Patient Condition</label>
            <select class="selectpicker" data-live-search="false" title="Select" id="cboPatientCondition"></select>
        </div>
    </div>
            
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <section>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <p class="subheading bg-lightgrey pad5">Patient Info</p>
                    <hr/>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="txtPatientName">Patient Name</label>
                        <input id="txtPatientName" type="text" class="form-control" maxlength="75" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6">
                    <div class="form-group">
                        <label class="lable-color"> Gender</label>
                        <select class="selectpicker" data-live-search="false" title="Select" id="cboGender">
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="form-group">
                        <label for="txtAge">Age</label>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <input id="txtAge" type="text" class="form-control inline d-inline" maxlength="3" />

                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <input type="date" class="form-control inline d-inline" name="name" value="" />

                            </div>
                        </div>
                     </div>
                </div>
            </div>
                 <div class="row">
                <div class="col-lg-2 col-md-3 col-sm-6">
                    <div class="form-group">
                        <label class="lable-color"> Accompained by</label>
                        <select class="selectpicker" data-live-search="false" title="Select" id="cboGender">
                            <option value="R">Relation</option>
                            <option value="O">Others</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="txtName">Name</label>
                        <input id="txtName" type="text" class="form-control" maxlength="75" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-6">
                    <div class="form-group">
                        <label for="txtContactNo">Contact No</label>
                        <input id="txtContactNo" type="text" class="form-control" maxlength="75" />
                    </div>
                </div>

            </div>
        </section>

    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <hr />
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button mr-10" id="btnSave" onclick=""><i class="far fa-save"></i> Save</button>
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" id="btnClear" onclick=""><i class="fa fa-redo"></i> Clear</button>
    </div>
</div>