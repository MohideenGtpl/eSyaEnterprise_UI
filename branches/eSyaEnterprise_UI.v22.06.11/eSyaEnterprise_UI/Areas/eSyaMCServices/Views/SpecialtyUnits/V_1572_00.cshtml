
@{
    ViewData["Title"] = "V_1572_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/jsTree.css" rel="stylesheet" />
@section scripts{
    <script src="~/js/jsTree.js"></script>
    <script src="~/js/eSyaMCServices/BusinessSpecialtyUnits.js"></script>
    }
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6">
            <label>Business Specialty Link</label>
            <div id="jstSpecialtyDoctorLink"></div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">

            <div class="demo-card-square mdl-card mdl-shadow--2dp" id="pnlrdoAddItem" style="width: 100%; display:none;min-height:unset;">
                <div class="row" style="padding:15px 10px 15px 15px; background:#fff!important">
                    <div class="col-sm-3 col-6">
                        <div class="radio" style="margin:0px;"><label style="font-size:16px !important;color:#797172 !important"><input type="radio" name="rdoAddItem" id="rdoAddBusinessSpecialtyUnit" value="SM" /> Add Specialty</label></div>
                    </div>

                </div>
            </div>


            <div class="demo-card-square mdl-card mdl-shadow--2dp" id="pnlMainMenu" style="width: 100%; display:none">

                <div id="pnlMainModuleHeading" class="mdl-card__title mdl-card--expand padleft0 padtop0 h-60 d-block">
                    <h5 class="mdl-card__title-text">Add Specialty</h5>
                </div>
                <div class="mdl-card__supporting-text fullwidth">
                    <div class="row  padbot10 mar0">
                        <input type="text" id="txtBusinessEntityId" style="display:none" />

                    </div>
                    <div class="row mar0 padbot10">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="lable-color">Description</label>
                                <input type="text" name="description" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div class="form-group">
                                <label class="lable-color">Gender</label>
                                <select class="selectpicker" data-live-search="false" id="" title="" >
                                    <option value="m">Male</option>
                                    <option value="f">Female</option>
                                    <option value="a">All</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="lable-color">Specialty Type</label>
                                <select class="selectpicker" data-live-search="false" id="" title="">
                                    <option>General</option>
                                    <option>Super Specialty</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="lable-color">Alied Services </label>
                                <select class="selectpicker" data-live-search="false" id="" title="">
                                    <option>Medicine</option>
                                    <option>Surgery</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div class="form-group">
                                <label class="lable-color">Active status</label>
                                <select class="selectpicker" data-live-search="false" id="" title="">
                                    <option value="m">Active</option>
                                    <option value="f">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row mar0 padbot10">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <p class="subheading">Specialty Parameter</p>
                            <hr class="left" />
                            <table id="jqgSpecialtyParameter"></table>
                            <div id="jqpSpecialtyParameter"></div>
                        </div>
                    </div>
                    <div class="row mar0 padbot10">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <p class="subheading">Clinic</p>
                            <hr class="left" />
                            <div class="default-checkbox-flex">
                                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkOPD">
                                    <input type="checkbox" id="chkOPD" class="mdl-checkbox__input">
                                    <span class="mdl-checkbox__label">OPD</span>
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="default-checkbox-flex">
                                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkPainClinic">
                                    <input type="checkbox" id="chkPainClinic" class="mdl-checkbox__input">
                                    <span class="mdl-checkbox__label">Pain Clinic</span>
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="default-checkbox-flex">
                                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkChestClinic">
                                    <input type="checkbox" id="chkChestClinic" class="mdl-checkbox__input">
                                    <span class="mdl-checkbox__label">Chest Clinic</span>
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="default-checkbox-flex">
                                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkEveningClinic">
                                    <input type="checkbox" id="chkEveningClinic" class="mdl-checkbox__input">
                                    <span class="mdl-checkbox__label">Evening Clinic</span>
                                </label>
                            </div>
                        </div>
                    </div>
                        </div>
                        <div class="mdl-card__actions mdl-card--border" style="text-align: center;">
                            <button class="mdl-button mdl-js-button mdl-button--raised primary-button" id="btnSaveSpecialty" onclick="fnSaveBusinessEntity()">
                                Add
                            </button>

                        </div>

                    </div>
                </div>
        <div class="col-lg-2 col-md-2 col-sm-6">
            <div>
                <h5>Action</h5>
            </div>
            <div class="row">
                <div class="col-lg-12 btn_pdnTop">
                    <button class="mdl-button mdl-js-button mdl-button--raised cancel-button btn_wdth" id="btnDeleteNode" onclick="fnDeleteNode()">
                        <i class="fa fa-times" style="color:#fff !important"></i>     Delete Node
                    </button>
                </div>

                <div class="col-lg-12 btn_pdnTop">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnExpandAll" onclick="fnExpandAll()">
                        <i class="fas fa-expand"></i>   Expand All
                    </button>
                </div>
                <div class="col-lg-12 btn_pdnTop">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnCollapseAll" onclick="fnCollapseAll()">
                        <i class="fas fa-compress"></i>   Collapse All
                    </button>
                </div>

            </div>
        </div>
    </div>

