            fnAddGridSerialNoHeading();
            fnJqgridSmallScreen("jqgDonorRegistration");
        },
    }).jqGrid('navGrid', '#jqpDonorRegistration', { add: false, edit: false, search: false, del: false, refresh: false }).jqGrid('navButtonAdd', '#jqpDonorRegistration', {
