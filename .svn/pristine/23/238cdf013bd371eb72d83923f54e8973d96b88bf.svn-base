@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "V_105_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');

    var localization = {
        StatutoryDescription: '@Localizer["StatutoryDescription"]',
        StatutoryDetail: '@Localizer["StatutoryDetail"]',
        Active: '@Localizer["Active"]',
        Save: '@Localizer["Save"]',
        Clear: '@Localizer["Clear"]',
    };
</script>
@section scripts{
    <script src="~/js/Config/BusinessStatutory.js"></script>
}

<div class="row">

    <div class="col-lg-3  col-md-3 col-sm-12 col-xs-12">
        <div class="form-group">
            <label class="lable-color"> @Localizer["BusinessLocation"]</label>
            <div>
                <select class="selectpicker" data-live-search="true" id="cboBusinessKey" title="" data-size="8" asp-items="@ViewBag.BusinessKeyList" onchange="fnBusinessKeyChange()">
                    <option value="0">Select</option>
                </select>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-lg-12 padbot10">
        <table id="jqgStatutoryDetails"></table>
        <div id="jqpStatutoryDetails"></div>
    </div>

    <div class="col-lg-12 text-center">
        <hr />
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button mr-10" id="btnSaveBusinessStatutory" onclick="fnSaveBusinessStatutory();">
            <i class="fa fa-save"></i> @Localizer["Save"]
        </button>
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" onclick="fnClearBusinessStatutory()"><i class="fa fa-times"></i> @Localizer["Clear"]</button>
    </div>
</div>

<script>
    @*var StatutoryCodes = (@Html.Raw(Json.Serialize(ViewBag.StatCodes)));*@
</script>