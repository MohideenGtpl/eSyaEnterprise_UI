<script>
        $('table').on('click', "span", function () {

            //$("#modalGuestStatus").modal('show');
           // $(this).attr('data-content', $(".modal-body").html());
       // });
            $(this).popover({
                html: true,
                trigger: 'manual',
                sanitize: false,
                content: function () {
                    var con = $(".modal-body").html();
                    return con;
                },
                placement: 'top',
                title: function () {
                    var con = $(this).attr('data-name');
                    return con;
                }
            }).click(function (e) {
                $(this).popover('toggle');
            });
        })
</script>

