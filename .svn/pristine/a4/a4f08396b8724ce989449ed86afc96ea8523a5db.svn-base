            var _roomNumber = rn.map(item => item.RoomNumber);
            _roomNumber = _roomNumber.filter(function (itm, i, _roomNumber) {
                return i == _roomNumber.indexOf(itm);
            });
           
            for (var b = 0; b < _roomNumber.length; b++) {
