@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Application Codes";
}
@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');

      var localization = {
        ApplicationCode: '@Localizer["ApplicationCode"]',
        CodeType: '@Localizer["CodeType"]',
        Description: '@Localizer["Description"]',
        ShortCode: '@Localizer["ShortCode"]',
        DefaultStatus: '@Localizer["DefaultStatus"]',
        Active: '@Localizer["Active"]',
        Actions: '@Localizer["Actions"]',
        Edit: '@Localizer["Edit"]',
        View: '@Localizer["View"]',
        Save: '@Localizer["Save"]',
        Cancel: '@Localizer["Cancel"]',
    };
</script>
<script src="~/js/Config/ApplicationCodes.js"></script>
<style>
    .bootstrap-select {
        width: 100% !important;
    }

    #jqgh_jgvApplicationCodes_DefaultStatus {
        text-align: center;
    }
</style>

<div class="row">
    <div class="col-lg-3 col-md-5 col-sm-6 col-xs-12">
        <div class="form-group">
            <label class="lable-color">@Localizer["CodeType"] </label>
            <div>
                <select class="selectpicker" data-live-search="true" id="cboCodeType" title="" data-size="8"
                        asp-items="@ViewBag.CodeTypeList"
                        onchange="fnGridLoadApplicationCodes()">
                  <option value="0">All</option>
                   </select>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-7 col-sm-6 form-group padtop20 text-right padright0">
        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button mr-10" id="btnExportToExcel" onclick="fnExportToExcel()"><i class="fas fa-file-export"></i> @Localizer["ExportToExcel"]  </button>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table id="jqgApplicationCodes"></table>
        <div id="jpgApplicationCodes"></div>
    </div>
</div>

<div class="modal fade" id="PopupApplicationCodes" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-md" role="document" style="box-shadow:none;">
        <div class="modal-content">
            <div class="modal-header popupHeader">
                <button type="button" class="close" data-dismiss="modal" onclick="fnClearFields()"> <i class="fa fa-times"></i></button>
                <h4 class="modal-title">@Localizer["ApplicationCodes"]</h4>
            </div>


            <div class="modal-body">
                <div class="row padbot4">
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="txtApplicationCode" style="display:none">
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label> @Localizer["Description"]</label>
                            <input id="txtApplicationCodeDescription" class="form-control" type="text" autocomplete="off" maxlength="50" />

                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label> @Localizer["ShortCode"]</label>
                            <input id="txtShortCode" class="form-control" type="text" autocomplete="off" maxlength="15" />

                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="default-checkbox single">
                            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkApplicationDefaultStatus">
                                <input type="checkbox" id="chkApplicationDefaultStatus" class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["DefaultStatus"]</span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="default-checkbox single">
                            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkActiveStatus">
                                <input type="checkbox" id="chkActiveStatus" class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["Active"]</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button" id="btnSaveApplicationCode" onclick="fnSaveApplicationCode()">
                            <i class="fa fa-save"></i>   @Localizer["Save"]
                        </button>
                        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button" data-dismiss="modal" onclick="fnClearFields()"><i class="fa fa-times"></i>  @Localizer["Cancel"] </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






