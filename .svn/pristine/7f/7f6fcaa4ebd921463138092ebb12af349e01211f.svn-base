@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ECA_10_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/js/Config/FormDocumentLink.js"></script>
}

@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');

     var localization = {
         FormID: '@Localizer["formID"]',
         FormName: '@Localizer["Form Name"]',
         DocID: '@Localizer["docID"]',
         DocName: '@Localizer["Document Name"]',
         Edit: '@Localizer["Edit"]',
         Active: '@Localizer["Active"]',
         Actions: '@Localizer["Actions"]',
         View: '@Localizer["View"]',
         Save: '@Localizer["Save"]',
         Update: '@Localizer["Update"]',
         Delete: '@Localizer["Delete"]',
         Activate: '@Localizer["Activate"]',
         Deactivate: '@Localizer["Deactivate"]',
         AddFormDocumentLink: '@Localizer["AddFormDocumentLink"]',
         ViewFormDocumentLink:'@Localizer["ViewFormDocumentLink"]',
    };
</script>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table id="jqgFormDocumentLink"></table>
        <div id="jqpFormDocumentLink"></div>
    </div>
</div>

<div class="modal fade in" id="PopupFormDocumentLink" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-md" role="document" style="box-shadow:none;">
        <div class="modal-content ">
            <div class="modal-header popupHeader">
                <button type="button" class="close ml-auto" data-dismiss="modal"> <i class="fa fa-times"></i></button>
                <h4 class="modal-title">@Localizer["AddFormDocumentLink"]</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6 col-6">
                        <div class="form-group">
                            <label for="txtCodeType">Form Name</label>

                            <select class="selectpicker" data-live-search="true" id="cboFormId" title="Select" data-size="4" data-container="body" asp-items="@ViewBag.Forms">
                                <option value="0">@Localizer["Select"]  </option>
                            </select>


                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="txtCodeDescription"> Document Name</label>

                            <select class="selectpicker" data-live-search="true" id="cbodocumentId" title="Select" data-size="4" data-container="body" asp-items="@ViewBag.Documents">
                                <option value="0">@Localizer["Select"]  </option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3  col-md-3 col-sm-12 col-xs-12">
                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkActiveStatus">
                            <input type="checkbox" id="chkActiveStatus" class="mdl-checkbox__input">
                            <span class="mdl-checkbox__label">Active</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button" id="btnSaveFormDocumentLink" onclick="fnSaveFormDocumentLink()">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" data-dismiss="modal" id="btnCancelFormDocumentLink"><i class="fa fa-times"></i> Cancel </button>
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btndeActiveFormDocumentLink" onclick="fnDeleteFormDocumentLink()"><i class="fa fa-times"></i> Delete</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



