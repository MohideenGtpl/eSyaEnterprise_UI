<div class="row padbot4 padtop15">
    
    <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="form-group">
            <label for="txtCustomerName"> Customer Name</label>
            <input id="txtCustomerName" type="text" class="form-control" maxlength="75"/>
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6">
        <div class="form-group">
            <label> Credit Period in days</label>
            <input id="txtCreditPeriod" type="text" class="form-control integerFormat" />
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6">
        <div class="form-group">
            <label> Credit Limit</label>
            <input id="txtCreditLimit" type="text" class="form-control currencyFormat" maxlength="18" />
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-sm-6">
        <div class="default-checkbox">
            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkValidateLimit">
                <input type="checkbox" id="chkValidateLimit" class="mdl-checkbox__input">
                <span class="mdl-checkbox__label">Validate Limit</span>
            </label>
        </div>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-6">
        <div class="form-group">
            <label class="lable-color"> Status</label>
            <div>
                <select class="selectpicker" data-live-search="false" id="cboActiveStatus" title="">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button m-r-15" id="btnSaveCustomerDetails" onclick="fnSaveCustomerDetails()">
            Save
        </button>
        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button" id="btnCancel" onclick="fnCloseCustomerDetails()"> Cancel</button>

    </div>

</div>