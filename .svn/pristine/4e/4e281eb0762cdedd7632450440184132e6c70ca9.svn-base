    $("#cboPacking").selectpicker('refresh');
    $("#txtDrugVolume").val('');
    $("#txtPrintDesc").val('');
    $("#txtBarCodeID").val('');
    $("#chkActiveStatus").parent().addClass("is-checked");
}

