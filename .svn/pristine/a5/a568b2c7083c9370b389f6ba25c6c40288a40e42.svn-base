function fnClearFields() {
    $("input[type=text").val('');
    $("[id^='cbo']").val('ch');
    $('.fa-star').css('color', '#ccc');
    $(".label-comment").html("Comment");
    $('textarea').val('');
    $('textarea').attr("data-status", "o");
    toastr.success("All fields are cleared");
}