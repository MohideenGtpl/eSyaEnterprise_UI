@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "V_73_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/Config/CountryStatutoryDetails.js"></script>
@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');

     var localization = {
         StatShortCode: '@Localizer["StatShortCode"]',
         StatutoryDescription: '@Localizer["StatutoryDescription"]',
         StatPattern: '@Localizer["StatPattern"]',
         Active: '@Localizer["Active"]',
         Edit: '@Localizer["Edit"]',
         View: '@Localizer["View"]',
         Save: '@Localizer["Save"]',
         Cancel: '@Localizer["Cancel"]',
         Add: '@Localizer["Add"]',
         Actions: '@Localizer["Actions"]',
         AddStatutoryCode: '@Localizer["AddStatutoryCode"]',
         EditStatutoryCode: '@Localizer["EditStatutoryCode"]',
         Update: '@Localizer["Update"]',
         ViewStatutoryCode: '@Localizer["ViewStatutoryCode"]',
    };
</script>

<div class="row">
    <div class="col-lg-3 col-md-5 col-sm-6 col-xs-12">
        <div class="form-group">
            <label class="lable-color">@Localizer["ISDCodes"] </label>
            <div>
                <select class="selectpicker" data-live-search="true" id="cboIsdcode" title="" data-size="8" onchange="fnGridLoadStatutoryCode()">
                    <option value="0"> @Localizer["ChooseISDCode"]</option>
                    @if (ViewBag.Isdcodes != null)
                    {
                        foreach (var code in ViewBag.Isdcodes)
                        {
                            <option value="@code.Isdcode">@code.Isdcode-@code.CountryName</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
</div>

<div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="statutoryCodeContainer">
                <table id="jqgStatutoryCode"></table>
                <div id="jqpStatutoryCode"></div>
            </div>
        </div>
    </div>


<div class="modal fade in" id="PopupStatutoryCode" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg  " role="document" style="box-shadow:none;">
        <div class="modal-content ">
            <div class="modal-header popupHeader">
                <button type="button" class="close ml-auto" data-dismiss="modal"> <i class="fa fa-times"></i></button>
                <h4 class="modal-title">Add Statutory Code</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="txtStatutoryCode" style="display:none">
                    </div>
                </div>
                
                <div class="row padbot4">
                    <div class="col-lg-3  col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">

                            <label> @Localizer["StatShortCode"] </label>
                        
                            <input id="txtStatShortCode" class="form-control" maxlength="10" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label> @Localizer["StatutoryDescription"] </label>
                            <input id="txtStatutoryDescription" class="form-control" maxlength="50" type="text" />
                        </div>
                    </div>

                    <div class="col-lg-3  col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">

                            <label> @Localizer["StatPattern"] </label>
                   
                            <input id="txtStatPattern" class="form-control" maxlength="25" type="text" />
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 form-group">
                        <div class="default-checkbox">
                            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkActiveStatus">
                                <input type="checkbox" id="chkActiveStatus" class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["Active"]</span>
                              
                            </label>
                        </div>
                    </div>


                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <p class="subheading">Statutory Parameters</p>
                        <hr class="left" />
                        @await Component.InvokeAsync("eSyaParameter", new { parameterType = "10" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button" id="btnSaveStatutoryCode" onclick="fnSaveStatutoryCodes()">
                            @Localizer["Save"]
                        </button>
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" id="btnCancelStatutoryCode" data-dismiss="modal" onclick="fnClearFields()"> @Localizer["Cancel"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

