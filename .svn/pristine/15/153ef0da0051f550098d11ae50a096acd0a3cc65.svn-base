
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
    {

    <link rel="stylesheet" href="~/css/jsTree.css" />
    <script src="~/js/jsTree.js"></script>

}

<style>
    .btn_wdth {
        width: 100%;
        margin-bottom: 7px;
        text-align: left;
        height: 35px !important;
    }

    .btn_pdnTop {
        padding-top: 6px;
        padding-left: 15px;
        padding-right: 15px;
    }

    h5 {
        margin-top: 0px;
        font-weight: 600;
        color: #797172;
        padding-left: 0px;
        margin-bottom: 10px;
        font-size: 20px;
    }

    #listbox_source_4_wrapper ul li, #listbox_destination_4_wrapper ul li {
        padding-left: 10px;
    }

    .listboxswap ul li.listbox_option:hover {
        background-color: aliceblue;
    }

    #pnlAddAction {
        margin-top: 15px;
    }

    .listboxswap .source_wrapper, .listboxswap .destination_wrapper {
        width: 41%;
    }

    .listboxswap .listbox_controls {
        width: 17%;
    }

    li.add button {
        width: 88px;
    }

    #listbox_destination_4_wrapper ul, #listbox_source_4_wrapper ul {
