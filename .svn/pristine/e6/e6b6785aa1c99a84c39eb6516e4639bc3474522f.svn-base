@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "V_ENC_19_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/eSyaNatureCure/PolicyType.js"></script>
@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');

     var localization = {
         PolicyStatement: '@Localizer["PolicyStatement"]',
         PolicyType: '@Localizer["PolicyType"]',
         AddPolicyType: '@Localizer["AddPolicyType"]',
         UpdatePolicyType: '@Localizer["UpdatePolicyType"]',
         ViewPolicyType: '@Localizer["ViewPolicyType"]',
         SerialNumber: '@Localizer["SerialNumber"]',
         Actions: '@Localizer["Actions"]',
         Active: '@Localizer["Active"]',
         Edit: '@Localizer["Edit"]',
         View: '@Localizer["View"]',
         Save: '@Localizer["Save"]',
         Update: '@Localizer["Update"]',
         Delete: '@Localizer["Delete"]',
         Activate: '@Localizer["Activate"]',
         DActivate: '@Localizer["DActivate"]',
    };

</script>
<style>
    .bootstrap-select {
        width: 100% !important;
    }
</style>

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="form-group">
            <label class="lable-color">@Localizer["PolicyType"] </label>
            <select class="selectpicker" data-live-search="true" id="cboPolicyType" title="" onchange="fnGridLoadPolicyTypes()" data-size="10">
                <option value="0"> All</option>
                @if (ViewBag.PolicyTypes != null)
                {
                    foreach (var ptype in ViewBag.PolicyTypes)
                    {
                        <option value="@ptype.ApplicationCode">@ptype.CodeDesc</option>
                    }

                }
            </select>
        </div>
    </div>
</div>

<div class="row padbot10">
    <div class="col-lg-12 col-md-12 col-sm-12 PlicyTypecontainer">
        <table id="jqgPolicyType"></table>
        <div id="jqpPolicyType"></div>
    </div>
</div>

<div class="modal fade in" id="PopupPolicyType" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document" style="box-shadow:none;">
        <div class="modal-content">
            <div class="modal-header popupHeader">
                <button type="button" class="close" data-dismiss="modal"> <i class="fa fa-times"></i></button>
                <h4 class="modal-title">@Localizer["AddPolicyType"] </h4>
            </div>
            <div class="modal-body">
                <div class="row padbot4">

                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="txtSerialNumber" style="display:none">
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                            <label>@Localizer["PolicyStatement"]</label>
                            <textarea id="txtPolicyStatement" rows="4" class="form-control"></textarea>

                        </div>

                    </div>

                </div>
                <div class="row padbot4">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="default-checkbox separate">
                            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkActiveStatus">
                                <input type="checkbox" id="chkActiveStatus" class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["Active"] </span>
                            </label>
                        </div>
                    </div>
                </div>
             
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button" id="btnSavePolicyType" onclick="fnSavePolicyType();">
                            <i class="fa fa-save"></i> @Localizer["Save"]
                        </button>
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" data-dismiss="modal" id="btnCancelPolicyType"><i class="fa fa-times"></i> @Localizer["Cancel"] </button>
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btndeActivePolicyType" onclick="fnDeletePolicyType();"><i class="fa fa-times"></i> @Localizer["DeActivate"] </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>












