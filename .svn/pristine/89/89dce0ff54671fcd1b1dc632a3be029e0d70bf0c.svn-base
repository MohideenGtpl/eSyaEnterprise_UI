function fnGridAddCustomerCodes() {
    $("#PopupCustomerCodes").modal('show');
    $("#divForm").css("display", "block");
    $("#divGrid").hide();
    $(".customerName").hide();
    $('#chkActiveStatus').parent().addClass("is-checked");
