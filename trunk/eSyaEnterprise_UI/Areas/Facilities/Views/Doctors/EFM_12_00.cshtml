            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="doctorprofile-tab" data-toggle="pill" href="#doctorprofile" role="tab" aria-controls="doctorprofile" aria-selected="true">  @Localizer["Doctor Profile"]</a>
                <a class="nav-link" id="aboutdoctor-tab" data-toggle="pill" href="#aboutdoctor" role="tab" aria-controls="aboutdoctor" aria-selected="false" onclick="fnGetDoctorProfileAboutDetails()">  @Localizer["About Doctor"]</a>
                <a class="nav-link " id="photoandsignature-tab" data-toggle="pill" href="#photoandsignature" role="tab" aria-controls="photoandsignature" aria-selected="false" onclick="fnGetDoctorProfileImage()"> @Localizer["Photo and Signature"]</a>
                <a class="nav-link" id="doctorbusinesslink-tab" data-toggle="pill" href="#doctorbusinesslink" role="tab" aria-controls="doctorbusinesslink" aria-selected="false" onclick="fnGridDoctorProfileBusinessLink()">  @Localizer["Doctor Business Link"]</a>
                <a class="nav-link" id="address-tab" data-toggle="pill" href="#address" role="tab" aria-controls="address" aria-selected="false" onclick="fnBindDoctorBusinessLinkList()">  @Localizer["Address"]</a>
