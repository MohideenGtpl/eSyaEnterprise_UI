            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="doctorprofile" role="tabpanel" aria-labelledby="doctorprofile-tab">
                    @await Html.PartialAsync("_DoctorProfile")
                </div>
                <div class="tab-pane fade" id="aboutdoctor" role="tabpanel" aria-labelledby="aboutdoctor-tab">
                    @await Html.PartialAsync("_AboutDoctor")
                </div>
                <div class="tab-pane fade" id="photoandsignature" role="tabpanel" aria-labelledby="photoandsignature-tab">
                    @await Html.PartialAsync("_PhotoAndSignature")
                </div>
                <div class="tab-pane fade" id="doctorbusinesslink" role="tabpanel" aria-labelledby="doctorbusinesslink-tab">
                    @await Html.PartialAsync("_DoctorBusinessLink")
                </div>
                @if (ViewBag.Isdcode == 91)
                {
                    <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                        @await Html.PartialAsync("_Address")
                        @*@await Html.PartialAsync("_IN_91_ADDR_UI.cshtml")*@
                    </div>
                }

                @if (ViewBag.Isdcode == 254)
                {
                    <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                        @await Html.PartialAsync("_KEN_254_ADDR_UI.cshtml")
                    </div>
                }
                @if (ViewBag.Isdcode == 20)
                {
                    <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                        @await Html.PartialAsync("_EG_20_ADDR_UI.cshtml")
                    </div>
                }


                <div class="tab-pane fade" id="statutorydetails" role="tabpanel" aria-labelledby="statutorydetails-tab">
                    @await Html.PartialAsync("_StatutoryDetails")
                </div>
                <div class="tab-pane fade" id="consultationRates" role="tabpanel" aria-labelledby="consultationRates-tab">
                    @await Html.PartialAsync("_ConsultationRates")
                </div>
                <div class="tab-pane fade" id="revenueshare" role="tabpanel" aria-labelledby="revenueshare-tab">
                    @await Html.PartialAsync("_RevenueShare")
                </div>
            </div>
        </div>

    </div>
</section>





