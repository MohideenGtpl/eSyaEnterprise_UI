@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "EFM_10_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{ 
<script src="~/js/Facilities/ReferralDoctor.js"></script>
}
<script>
    var localization = {
        Active: '@Localizer["Active"]',
        Actions: '@Localizer["Actions"]',
        DoctorShortName: '@Localizer["DoctorShortName"]',
        Qualification:'@Localizer["Qualification"]',
        Gender: '@Localizer["Gender"]',
        DoctorShortName: '@Localizer["DoctorShortName"]',
        DoctorName: '@Localizer["DoctorName"]',
        Gender: '@Localizer["Gender"]',
        Qualification: '@Localizer["Qualification"]',
        RegistrationNo: '@Localizer["RegistrationNo"]',
        MobileNumber: '@Localizer["MobileNumber"]',
        PAN: '@Localizer["PAN"]',
        Address: '@Localizer["Address"]',
        Pin: '@Localizer["Pin"]',
        Area: '@Localizer["Area"]',
        City: '@Localizer["City"]',
        State: '@Localizer["State"]',
        Country: '@Localizer["Country"]',
        AssocciatedWith: '@Localizer["AssocciatedWith"]',
        MarketingExecutive: '@Localizer["MarketingExecutive"]'
      }

</script>


