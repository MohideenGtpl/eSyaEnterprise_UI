<div class="modal fade in" id="PopupReferralDoctor" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document" style="box-shadow:none;">
        <div class="modal-content ">
            <div class="modal-header popupHeader">
                <button type="button" class="close ml-auto" data-dismiss="modal"> <i class="fa fa-times"></i></button>
                <h4 class="modal-title">@Localizer["AddReferralDoctor"]</h4>
            </div>

            <div class="modal-body">
                 
                <div class="row padbot4">
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtDoctorShortName"> @Localizer["DoctorShortName"]</label>
                            <input id="txtDoctorShortName" class="form-control" maxlength="50" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtDoctorName">@Localizer["DoctorName"] </label>
                            <input id="txtDoctorName" class="form-control" maxlength="50" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtGender">@Localizer["Gender"]  </label>
                            <select id="txtGender" class="selectpicker w-100">
                                <option>Select</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Transgender</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtQualification">@Localizer["Qualification"] </label>
                            <input id="txtQualification" class="form-control" maxlength="50" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtRegistrationNo">@Localizer["RegistrationNo"] </label>
                            <input id="txtRegistrationNo" class="form-control" maxlength="50" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label> @Localizer["MobileNumber"] </label>
                            @await Component.InvokeAsync("IsdMobileInput", new { id = "MobileNo" })
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtPAN">@Localizer["PAN"] </label>
                            <input id="txtPAN" class="form-control"  type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtAddress">@Localizer["Address"] </label>
                            <input id="txtAddress" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtPin">@Localizer["Pin"] </label>
                            <input id="txtPin" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtArea">@Localizer["Area"] </label>
                            <input id="txtArea" class="form-control"  type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtCity">@Localizer["City"] </label>
                            <input id="txtCity" class="form-control" type="text" />
                        </div>
                    </div>

                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtState">@Localizer["State"] </label>
                            <input id="txtState" class="form-control"  type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtCountry">@Localizer["Country"] </label>
                            <input id="txtCountry" class="form-control"  type="text" />
                        </div>
                    </div>

                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtAssociatedWith">@Localizer["AssociatedWith"] </label>
                            <input id="txtAssociatedWith" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtMarketingExecutive">@Localizer["MarketingExecutive"] </label>
                            <input id="txtMarketingExecutive" class="form-control" type="text" />
                        </div>
                    </div>

                    <div class="col-lg-3  col-md-3 col-sm-12 col-xs-12 form-group">
                           <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkActiveStatus">
                                <input type="checkbox" id="chkActiveStatus" class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["Active"]</span>
                            </label>
                     </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button" id="btnSaveCodeType" onclick="fnSaveCodeType();">
                            <i class="fa fa-save"></i> @Localizer["Save"]
                        </button>
                        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" data-dismiss="modal" id="btnCancelCodeType"><i class="fa fa-times"></i> @Localizer["Cancel"] </button>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

