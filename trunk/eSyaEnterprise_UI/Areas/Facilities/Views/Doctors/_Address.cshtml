@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6 form-group d-flex justify-content-end flex-column">
        <label for="cboLocation">BusinessLocation</label>
        <select class="w-100 selectpicker" id="cboLocation" data-size="8" data-live-search="true" onchange="fncboLocation_change()">
            <option value="0">Select</option>
        </select>
    </div>

    <div class="col-lg-4 col-md-6 col-sm-6 form-group d-flex justify-content-end flex-column">
        <label for="txtCountry">ISD-Code</label>
        @*<input type="text" name="country" value="" id="txtIsdcode" class="form-control" readonly />*@
        @*<select name="txtIsdcodes" class="selectpicker" data-container="body" data-live-search="true" id="txtIsdcode" title="" data-size="8" onchange="fnISD_change(this)"></select>*@
        <select class="selectpicker" data-container="body" data-live-search="true" id="txtIsdcode" title="" data-size="8" onchange="fnISD_change(this)"></select>

    </div>
    <div class="col-lg-4 col-md-6 col-sm-6 form-group d-flex justify-content-end flex-column">
        <label for="cboState">State</label>
        <select class="w-100 selectpicker" id="cboState" data-size="8" data-live-search="true" onchange="fncboState_change()">
            <option value="0">Select</option>
        </select>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-6 form-group d-flex justify-content-end flex-column">
        <label for="cboCityTown">City/Town</label>
        <select class="w-100 selectpicker" id="cboCity" data-size="8" data-live-search="true" onchange="fncboCity_change()">
            <option value="0">Select</option>
        </select>
    </div>

    <div class="col-lg-2 col-md-4 col-sm-6 form-group d-flex justify-content-end flex-column">
        <label for="txtZipCode">Zip Code</label>
        <input type="text" name="zipcode" value="" id="txtZipCode" class="form-control" />
    </div>
    <div class="col-lg-4 col-md-4 col-sm-6 offset-lg-2 form-group d-flex justify-content-end flex-column">
        <label for="cboZipDesc">Zip Description</label>
        <select class="w-100 selectpicker" id="cboZipDesc" data-size="8" data-live-search="true" onchange="fncboZipDesc_change()">
            <option value="0">Select</option>
        </select>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-6 form-group d-flex justify-content-end flex-column">
        <label for="txtArea">Area</label>
        <input type="text" name="area" value="" id="txtArea" class="form-control" />
    </div>
    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="form-group">
            <label for="txtAddress">Address </label>
            <textarea id="txtAddress" rows="3" class="form-control"></textarea>
        </div>
    </div>
</div>
<div class="row form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <hr />
        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent btn-back mr-10 c-white" onclick="fnCloseDoctorProfile()"><i class="fas fa-chevron-left"></i> @Localizer["Back"]</button>
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent primary-button mr-10" id="btnSaveDoctorProfileAddress" onclick="fnSaveDoctorProfileAddress()"><i class="far fa-save"></i> @Localizer["Save"]</button>
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  cancel-button cancel-button" id="btnClearDoctorAddress" onclick="fnClearDoctorAddress()"><i class="fa fa-redo"></i> @Localizer["Clear"]</button>
    </div>
</div>