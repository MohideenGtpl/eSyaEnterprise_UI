                    { name: "PreparedBy", width: 50, editable: true, align: 'left', hidden: false },
                    { name: "Chronic", width: 70, editable: false, hidden: false, align: 'left', resizable: true },
                    { name: "Illness", width: 70, editable: false, hidden: false, align: 'left', resizable: true },
                 ],
                pager: "#jqpChronicCondition",
                rowNum: 10000,
                rownumWidth: '55',
                pgtext: null,
                pgbuttons: null,
                loadonce: true,
                viewrecords: true,
                gridview: true,
                rownumbers: true,
                height: 'auto',
                align: "left",
                width: 'auto',
                autowidth: true,
                shrinkToFit: true,
                forceFit: true,
                scrollOffset: 0, caption: 'Visit Info',
                loadComplete: function (data) {
                    SetGridControlByAction();
                    fnJqgridSmallScreen("jqpChronicCondition");
                },
                onSelectRow: function (rowid, status, e) {
                },
            }).jqGrid('navGrid', '#jqpChronicCondition', { add: false, edit: false, search: false, del: false, refresh: false }).jqGrid('navButtonAdd', '#jqpChronicCondition', {
                caption: '<span class="fa fa-sync"></span> Refresh', buttonicon: "none", id: "custChronicConditionRefresh", position: "first", onClickButton: ''
            }).jqGrid('navButtonAdd', '#jqpChronicCondition', {
                caption: '<span class="fa fa-plus" data-toggle="modal"></span> Add', buttonicon: 'none', id: 'jqgChronicConditionAdd', position: 'first', onClickButton: ''
            });
            fnAddGridSerialNoHeading();
        }
    </script>