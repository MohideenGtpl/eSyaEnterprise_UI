                                                    {
                                                        <li><a asp-area=@f.Area asp-controller=@f.Controller asp-action=@f.View data-module=@sb.MenuSubGroupName data-submodule=@sb.MenuItemName><i class="far fa-file-alt"></i> @f.FormNameClient </a></li>
                                                    }
                                                </ul>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }*@

